<h1>Listing Characters</h1>

<div class="centerShitASecondTimeButForADifferentReason">
<table>
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Race</th>
    <th>Last Edited</th>

  </tr>

  <% @characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.gender %></td>
      <td><%= character.race %></td>
      <td><%= character.updated_at %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Destroy',
                                character_path(character),
                                method: :delete,
                                data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>
<p>
  <%= link_to 'New Character', new_character_path, :class => 'btn btn-primary' %>
</p>
<br />
<p>
   <%= link_to 'Race List', races_path, :class => 'btn btn-primary' %>
</p>
